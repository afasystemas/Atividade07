<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="thebestapp.uniara.com.br.atividade07.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dimensao"
        android:textStyle="bold"
        android:textSize="26dp"
        android:gravity="center"
        android:textColor="#ffaa0a"
        android:id="@+id/titulo"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/altura"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="#ffaa0a"
        android:id="@+id/altura"
        android:layout_below="@id/titulo"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/alturaEdit"
        android:inputType="number"
        android:layout_below="@+id/altura"/>

    <TextView
        android:layout_below="@id/alturaEdit"
        android:id="@+id/largura"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_marginTop="15dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="#ffaa0a"
        android:text="@string/largura"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/larguraEdit"
        android:inputType="number"
        android:maxLength="100"
        android:layout_below="@+id/largura"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/botao"
        android:background="@android:color/holo_purple"
        android:id="@+id/botao"
        android:textStyle="bold"
        android:textSize="17dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/larguraEdit"
        android:layout_alignParentRight="true"/>
</RelativeLayout>
